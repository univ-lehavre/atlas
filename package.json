{
  "name": "atlas",
  "private": true,
  "description": "REDCap API monorepo",
  "author": "Pierre-Olivier Chasset",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-lehavre/atlas.git"
  },
  "bugs": {
    "url": "https://github.com/univ-lehavre/atlas/issues"
  },
  "homepage": "https://github.com/univ-lehavre/atlas#readme",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "svelte:check": "turbo check",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "ci": "pnpm format:check && pnpm svelte:check && pnpm lint && pnpm typecheck && pnpm test:coverage && pnpm build",
    "audit:security": "pnpm audit --audit-level=high",
    "audit:licenses": "license-checker --onlyAllow \"MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD;Unlicense\" --excludePrivatePackages",
    "audit:unused": "knip --exclude unresolved,types",
    "audit:duplicates": "jscpd --pattern \"packages/*/src/**/*.ts\" --pattern \"apps/*/src/**/*.ts\"",
    "audit:size": "size-limit",
    "audit:versions": "taze -r --ignore-paths packages/redcap-openapi/upstream",
    "ci:audit": "pnpm audit:security && pnpm audit:licenses && pnpm audit:unused && pnpm audit:duplicates && pnpm audit:size && pnpm audit:versions",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "typedoc",
    "changeset:add": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "prepare": "lefthook install"
  },
  "size-limit": [
    {
      "path": "packages/crf/dist/**/*.js",
      "limit": "100 KB"
    },
    {
      "path": "packages/net/dist/**/*.js",
      "limit": "20 KB"
    }
  ],
  "jscpd": {
    "threshold": 5,
    "reporters": ["console"],
    "ignore": ["**/node_modules/**", "**/dist/**", "**/*.d.ts"],
    "format": ["typescript"],
    "minLines": 10,
    "minTokens": 50
  },
  "typedocOptions": {
    "entryPoints": ["packages/crf", "packages/net", "packages/redcap-openapi"],
    "entryPointStrategy": "packages",
    "out": "docs/api",
    "plugin": ["typedoc-plugin-markdown"],
    "readme": "none",
    "excludePrivate": true,
    "excludeInternal": true,
    "excludeExternals": true,
    "entryFileName": "index",
    "indexFormat": "table",
    "hidePageHeader": true,
    "hideBreadcrumbs": true
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@size-limit/file": "^12.0.0",
    "@univ-lehavre/atlas-shared-config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.18",
    "jscpd": "^4.0.7",
    "knip": "^5.82.1",
    "lefthook": "^2.0.15",
    "license-checker": "^25.0.1",
    "size-limit": "^12.0.0",
    "taze": "^19.9.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "vitepress": "^1.6.4",
    "vitepress-openapi": "^0.1.13",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.1"
}
