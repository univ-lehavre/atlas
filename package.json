{
  "name": "atlas",
  "private": true,
  "description": "REDCap API monorepo",
  "author": "Pierre-Olivier Chasset",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-lehavre/atlas.git"
  },
  "bugs": {
    "url": "https://github.com/univ-lehavre/atlas/issues"
  },
  "homepage": "https://github.com/univ-lehavre/atlas#readme",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "fix": "turbo format && turbo lint:fix",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "typecheck": "turbo typecheck",
    "knip": "knip --exclude unresolved,exports,types",
    "cpd": "jscpd --pattern \"packages/*/src/**/*.ts\" --pattern \"apps/*/src/**/*.ts\"",
    "license:audit": "license-checker --onlyAllow \"MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD;Unlicense\"",
    "audit": "pnpm audit --audit-level=high",
    "size": "size-limit",
    "docs:api": "typedoc",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "lefthook install",
    "changeset": "changeset",
    "bump": "changeset version",
    "release": "pnpm build && changeset publish",
    "check:quick": "pnpm format:check && pnpm lint",
    "check": "pnpm run \"/^(format:check|lint|knip|cpd)$/\"",
    "check:full": "pnpm check && pnpm typecheck && pnpm test && pnpm audit:all && pnpm size",
    "audit:all": "pnpm run \"/^(audit|license:audit)$/\"",
    "outdated": "pnpm outdated -r",
    "outdated:major": "pnpm outdated -r --format json 2>/dev/null | jq -e 'to_entries | map(select((.value.current | split(\".\")[0] | tonumber) < (.value.latest | split(\".\")[0] | tonumber))) | if length > 0 then . else empty end' | jq -r '.[] | \"\\(.key): v\\(.value.current) â†’ v\\(.value.latest)\"'",
    "ready:quick": "pnpm check:quick && pnpm typecheck && pnpm test",
    "ready": "pnpm check:full && pnpm build",
    "ready:release": "pnpm ready && pnpm outdated:major",
    "docker:test": "pnpm -C services/redcap docker:build && pnpm -C services/redcap docker -d && httpyac send services/redcap/api.http --all --bail -o short -e docker; pnpm -C services/redcap docker:down"
  },
  "size-limit": [
    {
      "path": "packages/crf/dist/**/*.js",
      "limit": "100 KB"
    },
    {
      "path": "packages/net/dist/**/*.js",
      "limit": "20 KB"
    }
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@size-limit/file": "^12.0.0",
    "@univ-lehavre/atlas-typescript-config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.17",
    "httpyac": "^6.16.3",
    "jscpd": "^4.0.7",
    "knip": "^5.82.1",
    "lefthook": "^2.0.15",
    "license-checker": "^25.0.1",
    "size-limit": "^12.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.28.0"
}
