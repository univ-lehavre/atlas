{
  "name": "@univ-lehavre/atlas-auth",
  "version": "0.2.0",
  "description": "Shared authentication service for Atlas SvelteKit applications",
  "author": "Pierre-Olivier Chasset",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-lehavre/atlas.git",
    "directory": "packages/atlas-auth"
  },
  "bugs": {
    "url": "https://github.com/univ-lehavre/atlas/issues"
  },
  "homepage": "https://github.com/univ-lehavre/atlas/tree/main/packages/atlas-auth#readme",
  "keywords": [
    "auth",
    "appwrite",
    "sveltekit",
    "magic-link"
  ],
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./validators": {
      "types": "./dist/validators.d.ts",
      "import": "./dist/validators.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@univ-lehavre/atlas-appwrite": "workspace:*",
    "@univ-lehavre/atlas-errors": "workspace:*",
    "@univ-lehavre/atlas-validators": "workspace:*",
    "node-appwrite": "^17.0.1"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.20.8",
    "@univ-lehavre/atlas-shared-config": "workspace:*",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "vitest": "^4.0.18"
  }
}
