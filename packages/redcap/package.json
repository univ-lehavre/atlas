{
  "name": "@univ-lehavre/atlas-redcap",
  "version": "1.2.0",
  "description": "REDCap source analysis, OpenAPI spec extraction, and API documentation tools",
  "author": "Pierre-Olivier Chasset",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-lehavre/atlas.git",
    "directory": "packages/redcap"
  },
  "bugs": {
    "url": "https://github.com/univ-lehavre/atlas/issues"
  },
  "homepage": "https://github.com/univ-lehavre/atlas/tree/main/packages/redcap#readme",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./extractor": {
      "types": "./dist/extractor/index.d.ts",
      "import": "./dist/extractor/index.js"
    },
    "./comparator": {
      "types": "./dist/comparator/index.d.ts",
      "import": "./dist/comparator/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "bin": {
    "redcap": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "specs"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "cli": "tsx src/cli/index.ts",
    "extract": "tsx src/cli/index.ts extract",
    "compare": "tsx src/cli/index.ts compare",
    "docs": "tsx src/cli/index.ts docs",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:reset": "docker compose -f docker/docker-compose.yml down -v && docker compose -f docker/docker-compose.yml up -d",
    "docker:install": "./scripts/install-redcap.sh",
    "test:setup": "tsx tests/fixtures/setup-test-projects.ts",
    "test:contract": "./scripts/test-contract.sh",
    "test:security": "./scripts/test-security.sh",
    "test:api": "tsx tests/api-smoke.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "picocolors": "^1.1.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@univ-lehavre/atlas-typescript-config": "workspace:*",
    "@types/node": "^25.0.10",
    "@vitest/eslint-plugin": "^1.6.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  }
}
