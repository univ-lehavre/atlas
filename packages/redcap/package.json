{
  "name": "@univ-lehavre/atlas-redcap",
  "version": "1.1.0",
  "description": "REDCap source analysis, Docker environment, and API contract testing",
  "author": "Pierre-Olivier Chasset",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-lehavre/atlas.git",
    "directory": "packages/redcap"
  },
  "bugs": {
    "url": "https://github.com/univ-lehavre/atlas/issues"
  },
  "homepage": "https://github.com/univ-lehavre/atlas/tree/main/packages/redcap#readme",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "lint": "eslint analyzer tests",
    "lint:fix": "eslint analyzer tests --fix",
    "format": "prettier --write analyzer tests",
    "format:check": "prettier --check analyzer tests",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:reset": "docker compose -f docker/docker-compose.yml down -v && docker compose -f docker/docker-compose.yml up -d",
    "docker:install": "./scripts/install-redcap.sh",
    "analyze": "tsx analyzer/extract-api.ts",
    "docs": "tsx analyzer/serve-docs.ts",
    "compare": "tsx analyzer/compare-spec.ts",
    "test:setup": "tsx tests/fixtures/setup-test-projects.ts",
    "test:contract": "./scripts/test-contract.sh",
    "test:security": "./scripts/test-security.sh",
    "test:api": "tsx tests/api-smoke.ts",
    "test": "vitest run"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@univ-lehavre/atlas-typescript-config": "workspace:*",
    "@types/node": "^25.0.10",
    "@vitest/eslint-plugin": "^1.6.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18",
    "yaml": "^2.8.2"
  }
}
