{
  "name": "@univ-lehavre/atlas-amarre",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "format": "prettier --write --ignore-path ../../.prettierignore .",
    "format:check": "prettier --check --ignore-path ../../.prettierignore .",
    "typecheck": "tsc --noEmit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "test:unit": "vitest",
    "test": "pnpm run test:unit -- --run",
    "test:coverage": "vitest run --coverage",
    "knip": "knip"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.2.0",
    "@sveltejs/adapter-node": "^5.5.1",
    "@sveltejs/kit": "^2.49.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.10",
    "@univ-lehavre/atlas-shared-config": "workspace:*",
    "eslint": "^9.39.2",
    "knip": "^5.73.4",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.46.4",
    "svelte-check": "^4.3.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@univ-lehavre/atlas-appwrite": "workspace:*",
    "@univ-lehavre/atlas-errors": "workspace:*",
    "@univ-lehavre/atlas-logos": "workspace:*",
    "@univ-lehavre/atlas-validators": "workspace:*",
    "luxon": "^3.7.2",
    "node-appwrite": "^21.1.0",
    "zod": "^4.2.0"
  }
}
