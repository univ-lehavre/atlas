{
  "name": "@univ-lehavre/atlas-net",
  "version": "0.4.0",
  "description": "Network diagnostic utilities for Atlas CLI tools",
  "author": "Pierre-Olivier Chasset",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-lehavre/atlas.git",
