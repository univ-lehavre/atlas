{
  "name": "@univ-lehavre/atlas-ecrin",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "format": "prettier --write --ignore-path ../../.prettierignore .",
    "format:check": "prettier --check --ignore-path ../../.prettierignore .",
    "typecheck": "tsc --noEmit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "vitest",
    "test": "pnpm run test:unit -- --run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.5.2",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/lodash": "^4.17.23",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.10",
    "@univ-lehavre/atlas-shared-config": "workspace:*",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.48.5",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@sigma/node-border": "^3.0.0",
    "@sigma/node-image": "^3.0.0",
    "@univ-lehavre/atlas-appwrite": "workspace:*",
    "@univ-lehavre/atlas-errors": "workspace:*",
    "@univ-lehavre/atlas-logos": "workspace:*",
    "@univ-lehavre/atlas-validators": "workspace:*",
    "appwrite": "^21.5.0",
    "graphology": "^0.26.0",
    "graphology-layout": "^0.6.1",
    "graphology-layout-force": "^0.2.4",
    "graphology-layout-forceatlas2": "^0.10.1",
    "lodash": "^4.17.23",
    "luxon": "^3.7.2",
    "node-appwrite": "^21.1.0",
    "openapi-response-validator": "^12.1.3",
    "sigma": "^3.0.2",
    "uuid": "^13.0.0"
  }
}
