{
  "name": "@univ-lehavre/atlas-crf",
  "version": "1.0.0",
  "description": "Clinical Research Forms - REDCap client, API server, and CLI tools",
  "author": "Pierre-Olivier Chasset",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-lehavre/atlas.git",
    "directory": "packages/crf"
  },
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./redcap": {
      "types": "./dist/redcap/index.d.ts",
      "import": "./dist/redcap/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "bin": {
    "crf-redcap": "./dist/bin/crf-redcap.js",
    "crf-server": "./dist/bin/crf-server.js"
  },
  "files": [
    "dist",
    "specs"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "generate:types": "openapi-typescript specs/versions/redcap-${REDCAP_VERSION:-14.5.10}.yaml -o src/redcap/generated/types.ts",
    "mock:redcap": "prism mock specs/versions/redcap-${REDCAP_VERSION:-14.5.10}.yaml --port 8080",
    "start": "node --env-file=.env dist/server/index.js",
    "start:dev": "node --env-file=.env --import=tsx src/server/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "./scripts/test-integration.sh",
    "test:api": "./scripts/test-api.sh"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/standard-validator": "^0.2.2",
    "@univ-lehavre/atlas-net": "workspace:*",
    "effect": "^3.19.15",
    "hono": "^4.11.5",
    "hono-openapi": "^1.1.2",
    "hono-rate-limiter": "^0.5.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.39.2",
    "@scalar/hono-api-reference": "^0.9.35",
    "@stoplight/prism-cli": "^5.14.2",
    "@types/node": "^25.0.10",
    "@univ-lehavre/atlas-typescript-config": "workspace:*",
    "@vitest/eslint-plugin": "^1.3.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-barrel-files": "^2.1.0",
    "eslint-plugin-functional": "^9.0.1",
    "eslint-plugin-import-x": "^4.15.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-no-secrets": "^1.1.2",
    "eslint-plugin-regexp": "^2.9.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-turbo": "^2.7.5",
    "eslint-plugin-unicorn": "^59.0.1",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  }
}
