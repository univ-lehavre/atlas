{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "project": ["*.{js,ts}"]
    },
    "packages/*": {
      "project": ["src/**/*.ts"]
    },
    "apps/*": {
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/dist/**"],
  "ignoreDependencies": ["@typescript-eslint/eslint-plugin", "@typescript-eslint/parser"]
}
