{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "project": ["*.{js,ts}"]
    },
    "packages/crf": {
      "project": ["src/**/*.ts"]
    },
    "packages/redcap-openapi": {
      "project": ["src/**/*.ts"]
    },
    "packages/redcap-sandbox": {
      "project": ["tests/**/*.ts"]
    },
    "packages/shared-config": {
      "project": ["*.json", "eslint/**/*.js", "prettier/**/*.js"]
    },
    "packages/find-an-expert": {
      "project": ["src/**/*.ts", "src/**/*.svelte"],
      "ignoreDependencies": ["@univ-lehavre/atlas-logos", "tailwindcss"]
    },
    "apps/*": {
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/dist/**", "**/.svelte-kit/**", "**/build/**", "**/upstream/**"],
  "ignoreDependencies": ["tsx", "@univ-lehavre/atlas-shared-config", "vitepress-openapi", "@modyfi/vite-plugin-yaml"],
  "ignoreBinaries": ["jq", "docker:build", "docker:down"]
}
