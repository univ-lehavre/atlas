{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "project": ["*.{js,ts}"]
    },
    "packages/redcap-api": {
      "project": ["src/**/*.ts"]
    },
    "packages/eslint-config": {
      "project": ["*.js"]
    },
    "packages/typescript-config": {
      "project": ["*.json"]
    },
    "apps/*": {
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/dist/**", "**/.svelte-kit/**", "**/build/**"],
  "ignoreDependencies": ["tsx"],
  "ignoreBinaries": ["jq", "docker:build", "docker:down", "uvx"]
}
