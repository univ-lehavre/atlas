{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "project": ["*.{js,ts}"]
    },
    "packages/crf": {
      "project": ["src/**/*.ts"]
    },
    "packages/redcap": {
      "project": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "packages/typescript-config": {
      "project": ["*.json"]
    },
    "apps/*": {
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/dist/**", "**/.svelte-kit/**", "**/build/**", "**/upstream/**"],
  "ignoreDependencies": ["tsx", "@univ-lehavre/atlas-typescript-config", "vitepress-openapi", "@modyfi/vite-plugin-yaml"],
  "ignoreBinaries": ["jq", "docker:build", "docker:down"]
}
